<h2>Posts List:</h2>
<hr>
<a href="/admin/posts/add">
    <button class="btn btn-success">New Post</button>
</a>
{{#each post}}
    <div class="card mt-3">
        <div class="card-body mt-4">
            <h4>{{name}}</h4>
            <p>Description: {{description}}</p>
            <p>Date: {{date}}</p>
            <p>Content: {{content}}</p>
            <p>Category: {{category.name}}</p>
            <br>
            <a href="/admin/posts/edit/{{_id}}">
                <button class="btn btn-success mt-3">Edit</button>
            </a>
        </div>
    </div>
    <br>
{{else}}
    <br>
    <h4 class="mt-3">No posts registered</h4>
{{/each}}