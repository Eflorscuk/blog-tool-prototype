<h2>Category List:</h2>
<hr>
<a href="/admin/posts/add">
    <button class="btn btn-success">New Category</button>
</a>
{{#each category}}
    <div class="card mt-3">
        <div class="card-body mt-4">
            <h4>{{name}}</h4>
            <small>Slug: {{slug}}</small>
            <br>
            <small>Created: {{date}}</small>
            <br>
            <a href="/admin/categories/edit/{{_id}}">
                <button class="btn btn-success mt-4">Edit</button>
            </a>
            <form action="/admin/categories/delete/" method="POST">
               <input type="hidden" name="id" value="{{_id}}">
               <button type="submit" class="btn btn-danger mt-2">Delete</button> 
            </form>
        </div>
    </div>
    <br>
{{else}}
    <br>
    <h4 class="mt-3">No category registered</h4>
{{/each}}